<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" package="com.example.vqhcovid">
    <!-- thêm để ket noi internet và android:usesCleartextTraffic="true" đẻ fix lỗi chuối khi get api -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- check network permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- check wifi state -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- location -->
    <uses-permission android:name="android.permission.ACCESS_GPS" />
    <uses-permission android:name="android.permission.ACCESS_ASSISTED_GPS" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Camera permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Read file permission -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Using Features -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <queries>
        <intent>
            <action android:name="com.huawei.hms.core.aidlservice" />
        </intent>
    </queries>
    <!--    android:hardwareAccelerated="false"-->
    <application android:allowBackup="true" android:appComponentFactory="android.support.v4.app.CoreComponentFactory" android:icon="@mipmap/ic_launcher_weather" android:label="@string/app_name" android:largeHeap="true" android:roundIcon="@mipmap/ic_launcher_weather_round" android:supportsRtl="true" android:theme="@style/Theme.AppCompat.Light.NoActionBar" android:usesCleartextTraffic="true" tools:replace="android:appComponentFactory">
        <activity android:name="com.example.vqhcovid.AboutActivity" />
        <!-- tools:replace="android:appComponentFactory" -->
        <!-- android:appComponentFactory="android.support.v4.app.CoreComponentFactory"> -->
        <!-- push kit -->
        <!-- <service android:name=".HmsMessageService" android:exported="false"> -->
        <!-- <intent-filter> -->
        <!-- <action android:name="com.huawei.push.action.MESSAGING_EVENT"/> -->
        <!-- </intent-filter> -->
        <!-- </service> -->
        <meta-data android:name="com.huawei.hms.client.channel.androidMarket" android:value="false" />
<!--    push  kit-->
        <service android:name="com.example.vqhcovid.HmsMessageService" android:exported="false">
            <intent-filter>
                <action android:name="com.huawei.push.action.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <meta-data android:name="push_kit_auto_init_enabled" android:value="true" />
        <!--        end -->
        <activity android:name="com.example.vqhcovid.QRscanActivity" />
        <activity android:name="com.example.vqhcovid.AccountActivity" />
        <activity android:name="com.example.vqhcovid.NewsActivity" />
        <activity android:name="com.example.vqhcovid.LoginActivity" />
        <activity android:name="com.example.vqhcovid.WebviewActivity" />
        <activity android:name="com.example.vqhcovid.HomeActivity" android:theme="@style/Theme.VQHCovid.NoActionBar" />
        <activity android:name="com.example.vqhcovid.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>

